import 'package:flutter/material.dart';
// import 'package:wear/wear.dart'; // Wear OS support - temporarily disabled
import 'watch_game_page.dart';

/// 手表专用主页
/// 
/// 支持设备：
/// - 小米手表（Wear OS）
/// - OPPO Watch（ColorOS Watch）
/// - vivo Watch（Wear OS）
/// - TicWatch系列
class WatchHomePage extends StatelessWidget {
  const WatchHomePage({super.key});

  @override
  Widget build(BuildContext context) {
    return WatchShape(
      builder: (BuildContext context, WearShape shape, Widget? child) {
        final isRound = shape == WearShape.round;
        
        return Scaffold(
          backgroundColor: Colors.black,
          body: SafeArea(
            child: Center(
              child: SingleChildScrollView(
                child: Padding(
                  padding: EdgeInsets.symmetric(
                    horizontal: isRound ? 20 : 16,
                    vertical: 16,
                  ),
                  child: Column(
                    mainAxisAlignment: MainAxisAlignment.center,
                    children: [
                      // Logo
                      Icon(
                        Icons.grid_4x4,
                        size: isRound ? 48 : 56,
                        color: Colors.amber,
                      ),
                      const SizedBox(height: 8),
                      
                      // 标题
                      const Text(
                        '四子游戏',
                        style: TextStyle(
                          fontSize: 18,
                          fontWeight: FontWeight.bold,
                          color: Colors.white,
                        ),
                      ),
                      const SizedBox(height: 24),
                      
                      // 双人对战按钮
                      _buildGameModeButton(
                        context: context,
                        label: '双人对战',
                        icon: Icons.people,
                        color: Colors.blue,
                        onPressed: () {
                          Navigator.push(
                            context,
                            MaterialPageRoute(
                              builder: (_) => const WatchGamePage(
                                isPlayerVsAI: false,
                              ),
                            ),
                          );
                        },
                      ),
                      const SizedBox(height: 12),
                      
                      // 人机对战按钮
                      _buildGameModeButton(
                        context: context,
                        label: '人机对战',
                        icon: Icons.smart_toy,
                        color: Colors.green,
                        onPressed: () {
                          _showDifficultyDialog(context);
                        },
                      ),
                    ],
                  ),
                ),
              ),
            ),
          ),
        );
      },
    );
  }

  /// 游戏模式按钮
  Widget _buildGameModeButton({
    required BuildContext context,
    required String label,
    required IconData icon,
    required Color color,
    required VoidCallback onPressed,
  }) {
    return SizedBox(
      width: double.infinity,
      child: ElevatedButton(
        onPressed: onPressed,
        style: ElevatedButton.styleFrom(
          backgroundColor: color,
          minimumSize: const Size(0, 48), // 符合Wear OS触控要求
          shape: RoundedRectangleBorder(
            borderRadius: BorderRadius.circular(24),
          ),
        ),
        child: Row(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            Icon(icon, size: 20),
            const SizedBox(width: 8),
            Text(
              label,
              style: const TextStyle(fontSize: 14),
            ),
          ],
        ),
      ),
    );
  }

  /// 难度选择对话框
  void _showDifficultyDialog(BuildContext context) {
    showDialog(
      context: context,
      builder: (context) => AlertDialog(
        backgroundColor: Colors.grey.shade900,
        title: const Text(
          '选择难度',
          style: TextStyle(color: Colors.white, fontSize: 16),
        ),
        content: Column(
          mainAxisSize: MainAxisSize.min,
          children: [
            _buildDifficultyOption(
              context: context,
              label: '简单',
              difficulty: 'easy',
              color: Colors.green,
            ),
            const SizedBox(height: 8),
            _buildDifficultyOption(
              context: context,
              label: '中等',
              difficulty: 'medium',
              color: Colors.orange,
            ),
            const SizedBox(height: 8),
            _buildDifficultyOption(
              context: context,
              label: '困难',
              difficulty: 'hard',
              color: Colors.red,
            ),
          ],
        ),
      ),
    );
  }

  /// 难度选项按钮
  Widget _buildDifficultyOption({
    required BuildContext context,
    required String label,
    required String difficulty,
    required Color color,
  }) {
    return SizedBox(
      width: double.infinity,
      child: ElevatedButton(
        onPressed: () {
          Navigator.pop(context); // 关闭对话框
          Navigator.push(
            context,
            MaterialPageRoute(
              builder: (_) => WatchGamePage(
                isPlayerVsAI: true,
                aiDifficulty: difficulty,
              ),
            ),
          );
        },
        style: ElevatedButton.styleFrom(
          backgroundColor: color,
          minimumSize: const Size(0, 44),
          shape: RoundedRectangleBorder(
            borderRadius: BorderRadius.circular(22),
          ),
        ),
        child: Text(
          label,
          style: const TextStyle(fontSize: 14),
        ),
      ),
    );
  }
}
